# =============================================================================
# SCORPIUS ENTERPRISE PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize for your environment
# NEVER commit the .env file to git - it contains secrets

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://scorpius:scorpius_secure_2024@localhost:5432/scorpius
DB_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY SETTINGS - CHANGE THESE IN PRODUCTION!
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
ENCRYPTION_KEY=your-32-char-encryption-key-here

# =============================================================================
# BLOCKCHAIN/WEB3 CONFIGURATION  
# =============================================================================
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=0x_your_private_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
VITE_APP_TITLE=Scorpius Enterprise Platform
API_GATEWAY_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_DOMAIN=monitoring.yourdomain.com
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# External Services
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance
API_RATE_LIMIT=1000
MAX_WORKERS=4

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Service Ports
API_GATEWAY_PORT=8000
BRIDGE_SERVICE_PORT=8001
QUANTUM_SERVICE_PORT=8002
REPORTING_SERVICE_PORT=8003
TIME_MACHINE_PORT=8004
CORE_ORCHESTRATOR_PORT=8005
