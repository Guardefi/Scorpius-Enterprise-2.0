# Environment Configuration for Quantum Security Platform

# Core Application Settings
QUANTUM_APP_NAME="Quantum Security Platform"
QUANTUM_VERSION="1.0.0"
QUANTUM_ENV="development"
QUANTUM_DEBUG=true
QUANTUM_LOG_LEVEL="INFO"

# API Settings
QUANTUM_API_HOST="0.0.0.0"
QUANTUM_API_PORT=8000
QUANTUM_API_WORKERS=1
QUANTUM_CORS_ORIGINS="['*']"

# Database Settings
QUANTUM_DATABASE_URL="postgresql://quantum:password@localhost:5432/quantum_db"
QUANTUM_REDIS_URL="redis://localhost:6379/0"
QUANTUM_NEO4J_URL="bolt://localhost:7687"
QUANTUM_NEO4J_USERNAME="neo4j"
QUANTUM_NEO4J_PASSWORD="password"

# Security Settings
QUANTUM_SECRET_KEY="change-me-in-production-secret-key-here"
QUANTUM_JWT_ALGORITHM="HS256"
QUANTUM_JWT_EXPIRE_MINUTES=30
QUANTUM_ENCRYPTION_KEY="change-me-in-production-32-chars"

# Post-Quantum Cryptography Settings
QUANTUM_PQC_ALGORITHMS="['Kyber768', 'Dilithium3', 'SPHINCS+']"
QUANTUM_FIPS_MODE=true
QUANTUM_SAFE_ONLY=false

# Service-Specific Settings
QUANTUM_CBOM_DEEP_SCAN=true
QUANTUM_CBOM_FORMAT="CycloneDX"

QUANTUM_ATTACK_SIM_GPU=false
QUANTUM_ATTACK_SIM_MAX_RSA=512

QUANTUM_THREAT_UPDATE_INTERVAL=3600
QUANTUM_THREAT_SOURCES="['nvd', 'arxiv', 'oqs-discuss']"

QUANTUM_DASHBOARD_REFRESH=30
QUANTUM_DASHBOARD_THEME="dark"

# Monitoring and Observability
QUANTUM_PROMETHEUS_ENABLED=true
QUANTUM_PROMETHEUS_PORT=9090
QUANTUM_JAEGER_ENABLED=false
QUANTUM_JAEGER_ENDPOINT=""

# Cloud Provider Settings (Optional)
AWS_REGION=""
AZURE_SUBSCRIPTION_ID=""
GCP_PROJECT_ID=""

# Kubernetes Settings
QUANTUM_K8S_NAMESPACE="quantum-security"
QUANTUM_K8S_SERVICE_ACCOUNT="quantum-scanner"
