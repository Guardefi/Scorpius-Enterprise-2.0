# =============================================================================
# SCORPIUS ENTERPRISE PRODUCTION CONFIGURATION
# =============================================================================
# SECURITY WARNING: This file contains production secrets
# - Never commit this file to version control
# - Use secrets management systems in production
# - Rotate secrets regularly

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY_HERE

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://scorpius:CHANGE_ME_DB_PASSWORD@postgres:5432/scorpius
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0
REDIS_POOL_SIZE=50
REDIS_TIMEOUT=5

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
ALLOWED_ORIGINS=https://app.scorpius.com,https://admin.scorpius.com
ALLOWED_HOSTS=scorpius.com,api.scorpius.com,*.scorpius.com

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Service URLs (internal Kubernetes DNS)
AUTH_SERVICE_URL=http://auth-service:8001
SCANNER_SERVICE_URL=http://scanner-service:8002
QUANTUM_SERVICE_URL=http://quantum-service:8003
MEV_PROTECTION_SERVICE_URL=http://mev-protection-service:8004
WALLET_GUARD_SERVICE_URL=http://wallet-guard-service:8005

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
S3_BUCKET=scorpius-production-backups
S3_REGION=us-west-2

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/scorpius.crt
SSL_KEY_PATH=/etc/ssl/private/scorpius.key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
BACKUP_RETENTION_DAYS=90
LOG_RETENTION_DAYS=365