{
  "dashboard": {
    "id": null,
    "title": "SCORPIUS Security Platform - Enterprise Dashboard",
    "tags": ["scorpius", "security", "enterprise"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Threat Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(scorpius_threats_detected_total)",
            "legendFormat": "Total Threats"
          },
          {
            "expr": "sum(rate(scorpius_threats_detected_total[5m])) * 300",
            "legendFormat": "Threats/5min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list",
              "orientation": "auto"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Active Security Scans",
        "type": "gauge",
        "targets": [
          {
            "expr": "scorpius_active_scans",
            "legendFormat": "Active Scans"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 80 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Vulnerability Detection Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(scorpius_vulnerabilities_total[5m])",
            "legendFormat": "{{severity}} Vulnerabilities"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5
            }
          }
        },
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Smart Contract Analysis Results",
        "type": "table",
        "targets": [
          {
            "expr": "scorpius_contract_analysis_results",
            "legendFormat": "Analysis Results",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            }
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 }
      },
      {
        "id": 5,
        "title": "System Performance Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(scorpius_cpu_usage[5m])",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "scorpius_memory_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Memory Usage GB"
          },
          {
            "expr": "rate(scorpius_network_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "Network MB/s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 }
      },
      {
        "id": 6,
        "title": "Security Tool Performance",
        "type": "heatmap",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(scorpius_scan_duration_seconds_bucket[5m]))",
            "legendFormat": "{{tool}} Scan Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            }
          }
        },
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 26 }
      },
      {
        "id": 7,
        "title": "Alert Status",
        "type": "alertlist",
        "targets": [],
        "fieldConfig": {
          "defaults": {}
        },
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 35 }
      },
      {
        "id": 8,
        "title": "API Response Times",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(scorpius_api_duration_seconds_bucket[5m]))",
            "legendFormat": "API P95 Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.5 },
                { "color": "red", "value": 1.0 }
              ]
            }
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 35 }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(scorpius_up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "severity",
          "type": "custom",
          "options": [
            { "text": "Critical", "value": "critical" },
            { "text": "High", "value": "high" },
            { "text": "Medium", "value": "medium" },
            { "text": "Low", "value": "low" }
          ],
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Events",
          "datasource": "prometheus",
          "expr": "ALERTS{alertname=~\"ScorpiusSecurity.*\"}",
          "textFormat": "{{alertname}}: {{summary}}",
          "titleFormat": "Security Alert"
        }
      ]
    }
  }
}
